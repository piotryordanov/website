{
  "name": "website",
  "author": "Piotr Yordanov",
  "license": "MIT",
  "version": "1.0.0",
  "description": "An opiniated frontend boilerplate built on top of nextJS",
  "main": "index.js",
  "scripts": {
    "start": "now dev",
    "deploy": "node scripts/getMeta.js",
    "test": "xo --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotryordanov/nextjs-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/piotryordanov/nextjs-boilerplate/issues"
  },
  "homepage": "https://github.com/piotryordanov/nextjs-boilerplate#readme",
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@zeit/next-css": "^1.0.1",
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "next": "^8.1.0",
    "next-redux-wrapper": "^3.0.0-alpha.3",
    "nextjs": "^0.0.3",
    "now": "^15.6.1",
    "prop-types": "^15.7.2",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-google-font-loader": "^1.0.5",
    "react-headroom": "^2.2.8",
    "react-markdown": "^4.0.8",
    "react-redux": "^7.1.0",
    "react-reveal": "^1.2.2",
    "react-spinners": "^0.5.4",
    "react-styled-clickable-progress-bar": "^1.0.11",
    "react-syntax-highlighter": "^10.3.1",
    "rebass": "^3.1.1",
    "redux": "^4.0.1",
    "redux-act": "^1.7.6",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.3.1"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.8.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.19.0",
    "husky": "^2.5.0"
  },
  "nodemonConfig": {
    "ignore": [
      "static/*"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "xo": {
    "prettier": true,
    "semicolon": false,
    "extends": "xo-react",
    "rules": {
      "import/extensions": [
        "error",
        "never",
        {
          "json": "always",
          "css": "always"
        }
      ],
      "unicorn/filename-case": 0,
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/jsx-tag-spacing": 0,
      "react/react-in-jsx-scope": 2
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
